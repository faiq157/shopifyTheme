<!-- Collections Hero Section -->
<div class="collections-hero">
  <div class="collections-hero__container page-width">
    <div class="collections-hero__content">
      <p class="collections-hero__subtitle">{{ section.settings.hero_subtitle | default: 'the collection trusted by icons' }}</p>
      
      <h1 class="collections-hero__title">
        {{ section.settings.hero_title | default: 'Shop All Collection' }}
      </h1>
   
      
      {% if section.settings.show_hero_cta and section.settings.hero_cta_text != blank and section.settings.hero_cta_link != blank %}
        <a href="{{ section.settings.hero_cta_link }}" class="collections-hero__cta">
          {{ section.settings.hero_cta_text }}
          <svg class="collections-hero__arrow" width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M1 11L11 1M11 1H1M11 1V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>
    
    {% if section.settings.show_hero_image and section.settings.hero_image != blank %}
      <div class="collections-hero__image">
        {%- liquid
          assign image_height = section.settings.hero_image_height
          assign image_width = section.settings.hero_image_width
          assign image_alt = section.settings.hero_image.alt | default: section.settings.hero_title
        -%}
        <img
          src="{{ section.settings.hero_image | image_url: width: image_width }}"
          alt="{{ image_alt }}"
          width="{{ image_width }}"
          height="{{ image_height }}"
          loading="eager"
          class="collections-hero__img"
        >
      </div>
    {% endif %}
  </div>
</div>

<!-- Category Bubbles just after Hero -->
<div class="collections-bubbles page-width">
  {% if section.settings.bubbles_heading != blank %}
    <h2 class="collections-bubbles__heading">{{ section.settings.bubbles_heading }}</h2>
  {% endif %}

  <ul class="collections-bubbles__list">
    {% assign rendered_any = false %}
    {% for block in section.blocks %}
      {% if block.type == 'category' %}
        {% assign coll = block.settings.collection %}
        {% if coll %}
          {% assign rendered_any = true %}
          <li class="collections-bubbles__item" {{ block.shopify_attributes }}>
            <a href="{{ coll.url }}">
              {% if coll.image %}
                <img src="{{ coll.image | image_url: width: 160 }}" alt="{{ coll.title }}" class="collections-bubbles__img">
              {% else %}
                <span class="collections-bubbles__img collections-bubbles__img--placeholder" aria-hidden="true">{{ coll.title | slice: 0, 1 }}</span>
              {% endif %}
              <span class="collections-bubbles__title">{{ block.settings.title | default: coll.title }}</span>
            </a>
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% unless rendered_any %}
      {% assign featured_collections = collections | slice: 0, 6 %}
      {% for coll in featured_collections %}
        <li class="collections-bubbles__item">
          <a href="{{ coll.url }}">
            {% if coll.image %}
              <img src="{{ coll.image | image_url: width: 160 }}" alt="{{ coll.title }}" class="collections-bubbles__img">
            {% else %}
              <span class="collections-bubbles__img collections-bubbles__img--placeholder" aria-hidden="true">{{ coll.title | slice: 0, 1 }}</span>
            {% endif %}
            <span class="collections-bubbles__title">{{ coll.title }}</span>
          </a>
        </li>
      {% endfor %}
    {% endunless %}
  </ul>
</div>

<div class="page-width collections-layout">

  <aside class="collections-sidebar" aria-label="Filter collections">
    <h3 class="sidebar-title">Filter</h3>
    <div class="sidebar-form">
      <label for="CollectionsFilterInput" class="visually-hidden">Filter collections</label>
      <input id="CollectionsFilterInput" type="search" placeholder="Search categories" autocomplete="off">
    </div>

    <h4 class="sidebar-subtitle">All categories</h4>
    <ul class="collections-sidebar__list" id="CollectionsSidebarList">
      {%- liquid
        assign sidebar_collections = collections
        case section.settings.sort
          when 'products_high', 'products_low'
            assign sidebar_collections = sidebar_collections | sort: 'all_products_count'
          when 'date', 'date_reversed'
            assign sidebar_collections = sidebar_collections | sort: 'published_at'
        endcase
        if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
          assign sidebar_collections = sidebar_collections | reverse
        endif
      -%}
      {%- for c in sidebar_collections -%}
        <li class="collections-sidebar__item" data-title="{{ c.title | escape | downcase }}">
          <a href="{{ c.url }}">{{ c.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </aside>
  
  <div class="collections-content">

  {%- liquid
    case section.settings.sort
      when 'products_high', 'products_low'
        assign collections = collections | sort: 'all_products_count'
      when 'date', 'date_reversed'
        assign collections = collections | sort: 'published_at'
    endcase

    if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
      assign collections = collections | reverse
    endif

    assign moduloResult = 28 | modulo: section.settings.columns_desktop
    assign paginate_by = 30
    if moduloResult == 0
      assign paginate_by = 28
    endif
  -%}
  {%- paginate collections by paginate_by -%}
    <ul
      class="collection-list grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
      role="list"
    >
      {%- for collection in collections -%}
        <li
          class="collection-list__item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          data-title="{{ collection.title | escape | downcase }}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          {% render 'card-collection',
            card_collection: collection,
            media_aspect_ratio: section.settings.image_ratio,
            columns: 3
          %}
        </li>
      {%- endfor -%}
    </ul>
    {% render 'pagination', paginate: paginate %}
  {%- endpaginate -%}
  </div>
</div>

<script>
  (function() {
    var input = document.getElementById('CollectionsFilterInput');
    if (!input) return;
    var gridItems = document.querySelectorAll('.collection-list__item[data-title]');
    var listItems = document.querySelectorAll('.collections-sidebar__item[data-title]');
    function applyFilter() {
      var q = (input.value || '').trim().toLowerCase();
      gridItems.forEach(function(el){
        var title = el.getAttribute('data-title') || '';
        el.style.display = q === '' || title.indexOf(q) !== -1 ? '' : 'none';
      });
      listItems.forEach(function(el){
        var title = el.getAttribute('data-title') || '';
        el.style.display = q === '' || title.indexOf(q) !== -1 ? '' : 'none';
      });
    }
    input.addEventListener('input', applyFilter);
  })();
</script>
