{{ 'johnny-dang-bottom-nav.css' | asset_url | stylesheet_tag }}

<section class="jd-bottom-nav">
  <div class="jd-bottom-nav__container">
    <div class="jd-bottom-nav__content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'nav_item' %}
            <div class="jd-bottom-nav__item" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="jd-bottom-nav__link">
                  {{ block.settings.text }}
                </a>
              {% else %}
                <span class="jd-bottom-nav__text">{{ block.settings.text }}</span>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

